<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="../animate.css">
    <!-- <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css"/> -->

    <link rel="stylesheet" type="text/css" href="../style.css">
    <link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
    <meta charset="utf-8" />
    <title>Login System</title>
  </head>
  <body>

    <section class="intro">
      <!-- <div class="animated fadeIn inner" style="animation-duration: 5s;"> -->
      <div class="inner">
          <div class="content animated fadeIn" style="animation-duration: 5s;">

            <h1 style="font-size: 15px;">Login System - Batman theme</h1>
            <!-- <a href="../">Index</a> -->
            <a href="../users/register">Register</a>
            <br />




            {{#if success_msg}}
              {{success_msg}}
            {{/if}}

            {{#if error_msg}}
              {{error_msg}}
            {{/if}}

            {{#if error}}
              {{error}}
            {{/if}}




            <form method="post" action="">
              <div>
                <label>Username</label><span> </span>
                <input id="i1" type="text" name="username" placeholder="username" />
              </div>
              <div>
                <label>Password</label>
                <input id="i2" type="password" name="password" placeholder="password" />
              </div>

              <button class="btn" type="submit">Submit</button>

            </form>

          </div>
      </div>
    </div>



  </body>

</html>
