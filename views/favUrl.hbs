  <body>
    <h1>Enter your favourite web site and share to the world</h1>

    <form method="POST" action="">
      <label for="link">Url:</label>
      <input type="text" name="link" placeholder="Link you wanna share"/>
      <label for="desc">Description:</label>
      <input type="text" name="desc" placeholder="What's it about?"/>
      <input type="submit" value="Share" />
    </form>


        {{#each name}}
            <div class="row" id={{this.description}}><p>{{this.description}}</p></div>
            <div class="row" id={{this.name}}><a href={{this.name}}>{{this.name}}</a></div>

            <button onclick="copyToClipboard('{{this.name}}')">Copy</button>
            <br />
        {{/each}}






  </body>


